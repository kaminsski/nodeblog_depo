<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-about md-padding">
	<h1 class="text-white text-center">CATEGORIES</h1>
</section>

<!--==========================
    ABOUTUS Section
============================-->
<section id="aboutus" class="md-padding">
	<div class="container">

		{{> adminNav}}

		<div class="row">
			<div class="col-md-4 py-5 ">
				<form class="w-100" action="" method="post" enctype="multipart/form-data">
					<div class="row justify-content-center g-0">
						<div class="col-12">
							<div class="form-group">
								<input class="form-control" name="name" type="text" placeholder="Your category name"
									required="required" data-validation-required-message="Please enter your title.">
								<p class="help-block text-danger"></p>

							</div>


						</div>

					</div>
					<div class="clearfix"></div>
					<div class="col-lg-12 text-center">
						<div id="success"></div>
						<button id="registerButton" class="main-btn" type="submit">Add Category</button>
					</div>
			</div>
			</form>
			<div class="col-md-8">
				<table class="table">
					<thead>
						<tr>
							<th>ID</th>
							<th>NAME</th>
							<th>DELETE</th>

						</tr>
					</thead>
					<tbody>
						{{#each categories }}
						<tr>
							<td>{{this._id}}</td>
							<td>{{this.name}}</td>
							<td>
								<form action="/admin/categories/{{this._id}}?_method=DELETE" method="post">
									<input type="hidden" name="_method" value="DELETE">
									<button type="submit" class="btn btn-danger">DELETE</button>
								</form>
							</td>
						</tr>
						{{/each}}

					</tbody>
				</table>
			</div>
		</div>
	</div>
</section>